{
    "compilerOptions": {
        "target": "es5",
        "module": "es2020",
        "moduleResolution": "node",
        "baseUrl": "./",
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "paths": {
            "@/*": ["./resources/ts/*"],
            "@components/*": ["./resources/ts/components/*"]
        }
    },
    "include": ["resources/ts/**/*"],  // Frontend paths pattern
    "exclude": ["node_modules", "vendor"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
